<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Fragments_padding">
        <item name="paddingStart">16dp</item>
        <item name="paddingEnd">16dp</item>
        <item name="android:paddingTop">32dp</item>
        <item name="android:paddingBottom">32dp</item>
    </style>

    <!-- ToolbarComponent -->
    <style name="Toolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="background">?attr/colorPrimary</item>
        <item name="elevation">4dp</item>
        <item name="theme">@style/ThemeOverlay.AppCompat.ActionBar</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
    </style>

    <style name="Toolbar_action_icon">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
    </style>

    <style name="Toolbar_action_icon.Toolbar_left_action_icon">
        <item name="android:layout_marginStart">16dp</item>
    </style>

    <style name="Toolbar_action_icon.Toolbar_right_action_icon">
        <item name="android:layout_marginEnd">16dp</item>
    </style>

    <style name="Toolbar_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/toolbarTitle</item>
        <item name="android:textSize">16dp</item>
    </style>

    <!-- WebView -->
    <style name="FormContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/settings_container_height</item>
        <item name="android:background">@drawable/form_container_border</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>


</resources>